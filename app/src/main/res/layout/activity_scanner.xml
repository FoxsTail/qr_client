<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lis.qr_client.activity.ScannerActivity">

    <TextView
            android:id="@+id/tvScanFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="86dp" android:layout_marginLeft="126dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:id="@+id/tvScanContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvScanFormat"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34dp" android:layout_marginLeft="126dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
            android:text="@string/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnScan"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="136dp"
            android:layout_marginLeft="148dp" app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="@string/create_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCreateQr" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnScan" android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/btnScan"/>




</android.support.constraint.ConstraintLayout>
