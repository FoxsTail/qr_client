<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lis.qr_client.activity.InventoryListActivity">

    <TextView
            android:text="@string/listLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvListLabel"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_weight="1" android:layout_marginStart="8dp" android:textSize="30sp"/>

    <Button
            android:text="@string/scan"
            android:layout_width="343dp"
            android:layout_height="45dp" android:id="@+id/btnScanInventory"
            android:layout_marginTop="0dp"
            app:layout_constraintVertical_weight="3"
            app:layout_constraintTop_toBottomOf="@+id/lvEquipments" android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/lvEquipments"/>
    <ListView
            android:layout_width="346dp"
            android:layout_height="385dp"
            android:id="@+id/lvEquipments"
            android:layout_marginLeft="8dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.916"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvListLabel"/>


</android.support.constraint.ConstraintLayout>
