<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom" android:background="@drawable/drawable_gradient_bg">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:paddingTop="10dp"
                  android:id="@+id/layout_home"
                  android:background="@drawable/drawable_btn_transparent_ripple">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/btn_home"
                   android:src="@drawable/ic_home"

                   android:layout_gravity="bottom|center_horizontal"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/home"
                  android:id="@+id/textView"
                  android:layout_gravity="center"
                  android:textColor="@color/colorWhite"
                  android:textSize="@dimen/textUnderIcon"
        />
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="2"
                  android:paddingBottom="5dp"
                  android:paddingTop="5dp"
                  android:id="@+id/layout_scan"
                  android:background="@drawable/drawable_btn_transparent_ripple">

        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/btn_scan_qr"
                   android:src="@drawable/ic_qr_code"
                   android:layout_gravity="bottom|center_horizontal"/>

    </LinearLayout>


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:paddingTop="10dp"
                  android:id="@+id/layout_finish"
                  android:background="@drawable/drawable_btn_transparent_ripple">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/btn_finish_inventory"
                   android:src="@drawable/ic_outline_assignment_turned_in_24px"
                   android:layout_gravity="bottom|center_horizontal" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/textUnderIcon"
                  android:text="@string/finish"
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:textColor="@color/colorWhite"
        />
    </LinearLayout>

</LinearLayout>


