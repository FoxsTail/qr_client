<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lis.qr_client.activity.LogInActivity" android:background="@color/colorLightGrey"
        app:layout_constraintHorizontal_weight="100" app:layout_constraintVertical_weight="100">

    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

    <android.support.design.widget.TextInputLayout android:layout_width="300dp"
                                                   android:layout_height="95dp"
                                                   android:hint="@string/password"
                                                   android:id="@+id/password_wrapper"
                                                   android:layout_marginStart="8dp"
                                                   android:layout_marginTop="55dp"
                                                   app:layout_constraintTop_toBottomOf="@+id/email_wrapper"
                                                   android:layout_marginLeft="36dp"
                                                   app:layout_constraintLeft_toLeftOf="parent"
                                                   android:layout_marginRight="8dp"
                                                   app:layout_constraintRight_toRightOf="parent">

        <EditText android:layout_width="368dp" android:layout_height="wrap_content" android:id="@+id/et_password"
                  tools:layout_editor_absoluteY="60dp" tools:layout_editor_absoluteX="8dp"

        />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout android:layout_width="300dp"
                                                   android:layout_height="95dp"
                                                   android:hint="@string/email"
                                                   android:id="@+id/email_wrapper"
                                                   android:layout_marginStart="8dp"
                                                   app:layout_constraintTop_toTopOf="parent"
                                                   android:layout_marginTop="117dp" android:layout_marginLeft="8dp"
                                                   app:layout_constraintLeft_toLeftOf="parent"
                                                   android:layout_marginRight="8dp"
                                                   app:layout_constraintRight_toRightOf="parent">

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/et_email"
        />
    </android.support.design.widget.TextInputLayout>


    <Button
            android:text="@string/to_log_in"
            android:layout_width="119dp"
            android:layout_height="72dp" android:id="@+id/btn_log_in_the_app"
            android:background="@drawable/ripple" android:padding="@dimen/button_padding"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="74dp" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_wrapper" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>
