<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lis.qr_client.activity.LogInActivity" android:background="@color/colorLightGrey">
    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>
    <TextView
            android:text="@string/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_login" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="97dp" android:layout_marginLeft="69dp"
            app:layout_constraintLeft_toLeftOf="parent" android:textSize="16sp" android:padding="5dp"
            android:textColor="@color/colorDark"/>
    <EditText
            android:layout_width="247dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:text=""
            android:paddingStart="@dimen/edit_text_start_padding"
            android:ems="10"
            android:id="@+id/et_email"
            android:layout_marginLeft="69dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/tv_label_login"
            android:hint="@string/email_example"
            android:maxLength="50"/>

    <TextView
            android:text="@string/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_password" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="232dp" android:layout_marginLeft="69dp"
            app:layout_constraintLeft_toLeftOf="parent" android:textSize="16sp" android:textColor="@color/colorDark"/>

    <EditText
            android:layout_width="247dp"
            android:layout_height="46dp"
            android:inputType="textPassword"
            android:ems="10"
            android:paddingStart="@dimen/edit_text_start_padding"
            android:id="@+id/et_password" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_password" android:layout_marginLeft="69dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="@string/password_example" android:maxLength="20"/>

    <Button
            android:text="Button"
            android:layout_width="119dp"
            android:layout_height="72dp" android:id="@+id/btn_log_in_the_app"
            android:background="@drawable/ripple" android:padding="@dimen/button_padding"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="74dp" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/et_password"
            app:layout_constraintVertical_bias="0.479"/>


</android.support.constraint.ConstraintLayout>
