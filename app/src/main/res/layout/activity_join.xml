<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lis.qr_client.activity.JoinActivity">


    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/tvEmail"
            android:layout_marginLeft="0dp" app:layout_constraintLeft_toLeftOf="@+id/tvPData" android:textSize="22sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmail" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="43dp" android:layout_marginLeft="102dp"
            app:layout_constraintLeft_toLeftOf="parent" android:textSize="22sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvPData"
            android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/tvEmail"
            android:layout_marginLeft="0dp" app:layout_constraintLeft_toLeftOf="@+id/tvEmail" android:textSize="22sp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGet" android:layout_marginRight="77dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="232dp"/>
</android.support.constraint.ConstraintLayout>
