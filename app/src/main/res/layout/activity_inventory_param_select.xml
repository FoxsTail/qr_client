<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lis.qr_client.activity.InventoryParamSelectActivity">

    <Spinner
            android:layout_width="326dp"
            android:layout_height="26dp"
            android:id="@+id/spinAddress"
            android:layout_marginTop="84dp" android:layout_marginLeft="1dp" app:layout_constraintLeft_toLeftOf="@+id/spinRoom"
            app:layout_constraintTop_toBottomOf="@+id/spinRoom"/>
    <Spinner
            android:layout_width="326dp"
            android:layout_height="26dp"
            android:id="@+id/spinRoom" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="163dp" android:layout_marginLeft="28dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:text="@string/select_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSelectAdr" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/spinRoom" android:layout_marginLeft="9dp"
            app:layout_constraintLeft_toLeftOf="@+id/spinRoom"/>
    <TextView
            android:text="@string/select_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSelectRoom" android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/spinAddress" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/spinAddress"/>
    <Button
            android:text="@string/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStart" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinAddress" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginLeft="148dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintVertical_bias="0.495"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
