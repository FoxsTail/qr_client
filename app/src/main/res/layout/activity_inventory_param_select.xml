<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:id="@+id/frame_paramSelect_layout"
             android:foreground="@color/colorBlack">

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lis.qr_client.activity.InventoryParamSelectActivity">

    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

    <Spinner
            android:layout_width="326dp"
            android:layout_height="26dp"
            android:id="@+id/spinAddress"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="196dp"
            android:layout_marginLeft="29dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginStart="29dp"/>
    <Spinner
            android:layout_width="326dp"
            android:layout_height="26dp"
            android:id="@+id/spinRoom"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="302dp"
            android:layout_marginLeft="29dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginStart="29dp"/>

    <TextView
            android:text="@string/select_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSelectAdr"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/spinAddress" android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/spinAddress"/>
    <TextView
            android:text="@string/select_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSelectRoom"
            android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/spinRoom" android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/spinRoom"/>
    <Button
            android:text="@string/start"
            android:layout_width="127dp"
            android:layout_height="78dp"
            android:id="@+id/btnStart"
            android:layout_marginStart="148dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinRoom"
            app:layout_constraintVertical_bias="0.468" android:layout_marginLeft="129dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/ripple"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="66dp"
            android:layout_height="63dp"
            android:id="@+id/pbLoadEquipment"
            app:layout_constraintBottom_toBottomOf="@+id/btnStart" android:layout_marginBottom="7dp"
            android:layout_marginLeft="25dp" app:layout_constraintLeft_toLeftOf="@+id/btnStart"/>
</android.support.constraint.ConstraintLayout>
</FrameLayout>