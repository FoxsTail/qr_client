<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:id="@+id/frame_main_layout"
             >

    <android.support.constraint.ConstraintLayout android:id="@+id/main_menu_layout"
                                                 xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:context="com.lis.qr_client.activity.MainMenuActivity">
        <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

        <Button
                android:text="@string/Formulyar"
                android:layout_width="121dp"
                android:layout_height="105dp"
                android:id="@+id/btnFormulyar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="170dp" android:layout_marginLeft="49dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="62dp"
                android:background="@drawable/ripple"/>

        <Button
                android:text="@string/Inventory"
                android:layout_width="121dp"
                android:layout_height="105dp"
                android:id="@+id/btnInventory"
                app:layout_constraintLeft_toRightOf="@+id/btnFormulyar"
                android:layout_marginLeft="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="170dp"
                android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.187" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" android:visibility="visible"
                android:background="@drawable/ripple"/>
        <Button
                android:text="@string/Profile"
                android:layout_width="121dp"
                android:layout_height="105dp"
                android:id="@+id/btnProfile"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/btnFormulyar"
                app:layout_constraintRight_toLeftOf="@+id/btnScanQR"
                android:layout_marginRight="20dp" android:layout_marginEnd="20dp"
                android:background="@drawable/ripple"/>
        <Button
                android:text="@string/ScanQR"
                android:layout_width="121dp"
                android:layout_height="105dp"
                android:id="@+id/btnScanQR"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/btnInventory"
                app:layout_constraintRight_toRightOf="@+id/btnInventory" android:layout_marginRight="-9dp"
                android:background="@drawable/ripple"
                android:elevation="0dp" android:textAlignment="center"/>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDialogChange" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="54dp" android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent" android:textSize="22sp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="91dp"
                android:layout_height="74dp"
                android:id="@+id/pbInventory"
                app:layout_constraintTop_toTopOf="@+id/btnInventory"
                app:layout_constraintRight_toRightOf="@+id/btnInventory"
                android:layout_marginTop="-1dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnInventory" android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintVertical_bias="0.739" android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/btnInventory"
                android:visibility="invisible"
                app:layout_constraintHorizontal_bias="0.357"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>