<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lis.qr_client.activity.MainMenuActivity">

    <Button
            android:text="@string/Furmulyar"
            android:layout_width="121dp"
            android:layout_height="105dp"
            android:id="@+id/btnFormulyar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="129dp" android:layout_marginLeft="62dp" app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="@string/Inventory"
            android:layout_width="121dp"
            android:layout_height="105dp"
            android:id="@+id/btnInventory"
            app:layout_constraintLeft_toRightOf="@+id/btnFormulyar"
            android:layout_marginLeft="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="129dp"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.187"/>
    <Button
            android:text="@string/Profile"
            android:layout_width="121dp"
            android:layout_height="105dp"
            android:id="@+id/btnProfile"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFormulyar"
            app:layout_constraintRight_toLeftOf="@+id/btnScanQR"
            android:layout_marginRight="20dp"/>
    <Button
            android:text="@string/ScanQR"
            android:layout_width="121dp"
            android:layout_height="105dp"
            android:id="@+id/btnScanQR"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/btnInventory" android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btnInventory"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDialogChange" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="54dp" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent" android:textSize="22sp"/>
</android.support.constraint.ConstraintLayout>
