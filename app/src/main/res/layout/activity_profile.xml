<?xml version="1.0" encoding="utf-8"?>
        <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lis.qr_client.activity.ProfileActivity">

    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>


    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fio"
            android:layout_marginLeft="56dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="106dp"/>

    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_private_data"
            android:layout_marginLeft="56dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="26dp" app:layout_constraintTop_toBottomOf="@+id/tv_fio"/>


    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_workplace"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_private_data" android:layout_marginLeft="56dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_phone_numbers"
            android:layout_marginLeft="56dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_workplace"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_address"
            android:layout_marginLeft="56dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone_numbers"/>
    <CheckBox
            android:text="@string/remote_desktop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/is_remote_desktop" android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_address" android:layout_marginLeft="217dp"
            app:layout_constraintLeft_toLeftOf="parent" android:enabled="false" />
</android.support.constraint.ConstraintLayout>
