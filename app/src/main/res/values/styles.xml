<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/colorDarker</item>
        <item name="android:itemBackground">@color/colorWhite</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:textColor">@color/colorDarker</item>
        <item name="android:textColorSecondary">@color/colorDarker</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerDropDownStyle</item>


    </style>

    <!-- other -->

    <!-- Menu -->

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:itemBackground">@drawable/drawable_btn_ripple</item>

    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- Required for Lollipop. -->
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>

    <!--Spinner-->

    <style name="SpinnerDropDownStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@drawable/drawable_divider_list</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!-- // -->
    <style name="MySpinner" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/drawable_spinner_holo_like</item>
    </style>

    <!--Checkbox-->
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorRed</item>
        <item name="colorControlActivated">@color/colorDarkBlue</item>
    </style>


    <!-- Splash theme-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_splash_screen</item>
    </style>


    <!--TextInputLayout-->
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:textColor">@color/colorUserInput</item>
        <item name="android:textColorHint">@color/colorUnfocused</item>
        <item name="android:colorControlNormal">@color/colorUnderlineGrey</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>


    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/errorTextSize</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">@dimen/hintTextSize</item>
    </style>

    <!--Tabs-->

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tabTextSize</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <!--Dialog-->

    <style name="MyDialogs" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--title-->
        <item name="android:textColor">@color/colorDarker</item>
        <item name="android:windowTitleStyle">@style/MyDialogTitle</item>
        <!--text-->
        <item name="android:textColorPrimary">@color/colorDarker</item>
        <!--Text size is in the dialog class file in onStartMethod-->
        <!--Buttons-->
        <item name="android:colorAccent">@color/colorDialogButton</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/dialogButtons</item>

        <!--Width and viewportWidth set to 24 and 26.0, same for height -->
    </style>

    <style name="MyDialogTitle">
        <item name="android:textSize">@dimen/dialogTitle</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>


</resources>

<!--

        android:fontFamily="sans-serif"           // roboto regular
        android:fontFamily="sans-serif-light"     // roboto light
        android:fontFamily="sans-serif-condensed" // roboto condensed
        android:fontFamily="sans-serif-black"     // roboto black
        android:fontFamily="sans-serif-thin"      // roboto thin (android 4.2)
        android:fontFamily="sans-serif-medium"    // roboto medium (android 5.0)-->
